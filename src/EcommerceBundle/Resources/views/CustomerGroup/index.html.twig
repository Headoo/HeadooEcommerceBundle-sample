{% extends 'HeadooEcommerceBundle::base.html.twig' %}

{% block hecommerce_content %}

    <h4>{{ 'hecommerce.customergroup.list'|trans({}, 'management') }}</h4>

    <table class="table records_list">
        <thead>
            <tr>
                <th>{{ 'hecommerce.management.backtothelist'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.name'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.actions'|trans({}, 'management') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hecommerce_customergroup_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('hecommerce_customergroup_show', { 'id': entity.id }) }}">{{ 'hecommerce.management.show'|trans({}, 'management') }}</a>
                    <a class="btn btn-default" href="{{ path('hecommerce_customergroup_edit', { 'id': entity.id }) }}">{{ 'hecommerce.management.edit'|trans({}, 'management') }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-default" href="{{ path('hecommerce_customergroup_new') }}">
        {{ 'hecommerce.management.backtothelist'|trans({}, 'management') }}
    </a>

{% endblock hecommerce_content %}
