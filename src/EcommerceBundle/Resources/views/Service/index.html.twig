{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'hecommerce.service.list'|trans({}, 'management') }}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'hecommerce.management.id'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.name'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.description'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.price'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.customergroup'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.servicerange'|trans({}, 'management') }}</th>
                <th>{{ 'hecommerce.management.actions'|trans({}, 'management') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hecommerce_service_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.customerGroup.name }}</td>
                <td>{{ entity.serviceRange.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hecommerce_service_show', { 'id': entity.id }) }}">{{ 'hecommerce.management.show'|trans({}, 'management') }}</a>
                    </li>
                    <li>
                        <a href="{{ path('hecommerce_service_edit', { 'id': entity.id }) }}">{{ 'hecommerce.management.edit'|trans({}, 'management') }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hecommerce_service_new') }}">
                {{ 'hecommerce.management.createnewentry'|trans({}, 'management') }} 
            </a>
        </li>
    </ul>
    {% endblock %}
